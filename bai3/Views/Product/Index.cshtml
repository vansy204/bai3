@model IEnumerable<bai3.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Product List</h2>
        <a asp-action="Add" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">+ Add New Product</a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <img src="@item.ImageUrl" class="card-img-top rounded-top-4" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="text-primary fw-semibold mb-2">$@item.Price.ToString("N2")</p>
                        <p class="card-text text-muted" style="font-size: 0.9rem;">@item.Description</p>
                        <p class="mt-auto"><span class="badge bg-secondary">@item.Category?.Name</span></p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-between px-3 pb-3">
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>